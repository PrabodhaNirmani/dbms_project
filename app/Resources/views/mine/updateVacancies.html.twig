{% extends 'block.html.twig' %}


{% block title %} Register Page{% endblock %}
{% block header %}
    <nav class="teal" role="navigation">
        <div class="nav-wrapper ">
            <a id="logo-container" href="#" class="brand-logo left">
                <i class="material-icons">visibility</i>iSolve</a>




            <ul class="right hide-on-med-and-down">
                <li>
                    <div class="col"><a  href="{{ 'backSchool' }}" ><i class="material-icons">present_to_all</i></a></div>
                </li>
                <li>
                    <div class="col"><a  href="{{ 'logout' }}" ><i class="material-icons">power_settings_new</i></a></div>
                </li>
            </ul>

        </div>

    </nav>


{% endblock %}


{% block body %}
    <div class="container">
        <h1 class="header center teal-text text-darken-2">Update Vacancies</h1>

        <div class="row">
            <form class="col s12" name="action">

                <div class="row">
                    <div class="input-field col s6">
                        <input id="currentvalue" type="number" class="validate" value="{{ vacancies }}" readonly>
                        <label for="currentvalue">Current Value</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <input id="newvalue" type="text" class="validate" required>
                        <label for="newvalue">New Value</label>
                    </div>
                </div>

                <button class="btn waves-effect waves-light" type="submit" name="action">Save

                </button>
            </form>
        </div>

        <br><br><br>
    </div>



{% endblock %}