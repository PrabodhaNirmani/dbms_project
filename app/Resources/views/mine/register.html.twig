{% extends 'block.html.twig' %}


{% block title %} Register Page{% endblock %}
{% block header %}
    <nav class="teal" role="navigation">
        <div class="nav-wrapper ">
            <a id="logo-container" href="#" class="brand-logo left">
                <i class="material-icons">visibility</i>iSolve</a>




            <ul class="right hide-on-med-and-down">
                <li>
                    <div class="col"><a  href="{{ 'back' }}" ><i class="material-icons">present_to_all</i></a></div>
                </li>

                <li>
                    <div class="col"><a  href="{{ 'login' }}" >Sign in</a></div>
                </li>
            </ul>

        </div>

    </nav>


{% endblock %}


{% block body %}
    <div class="container">
    <h1 class="header center teal-text text-darken-2">Student Registration Form</h1>

    <div class="row">
        <form class="col s12" name="action">
            <div class="row">
                <div class="input-field col s6">
                    <input  id="first_name" type="text" class="validate" required>
                    <label for="first_name">First Name</label>
                </div>
                <div class="input-field col s6">
                    <input id="last_name" type="text" class="validate" required>
                    <label for="last_name">Last Name</label>
                </div>
            </div>

            <div class="row">
                <div class="input-field col s6">
                    <input id="username" type="text" class="validate" required>
                    <label for="username">Username</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <input id="password" type="password" class="validate" required>
                    <label for="password">Password</label>
                </div>
            </div>
            {#<div class="row">#}
                {#<div class="input-field col s12">#}
                    {#<input id="email" type="email" class="validate">#}
                    {#<label for="email">Email</label>#}
                {#</div>#}
            {#</div>#}
            <button class="btn waves-effect waves-light" type="submit" name="action">Submit
                <i class="material-icons right">send</i>
            </button>
        </form>
    </div>

        <br><br><br>
    </div>



{% endblock %}