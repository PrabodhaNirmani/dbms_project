{% extends 'block.html.twig' %}


{% block title %} School Registration Page{% endblock %}
{% block header %}
    <nav class="teal" role="navigation">
        <div class="nav-wrapper ">
            <a id="logo-container" href="#" class="brand-logo left">
                <i class="material-icons">visibility</i>iSolve</a>

            <ul class="right hide-on-med-and-down">
                <li>
                    <div class="col"><a  href="{{ 'backAdmin' }}" ><i class="material-icons">present_to_all</i></a></div>
                </li>
                <li>
                    <div class="col"><a  href="{{ 'logout' }}" ><i class="material-icons">power_settings_new</i></a></div>
                </li>

            </ul>

        </div>

    </nav>


{% endblock %}


{% block body %}
    <div class="container">
        <h1 class="header center teal-text text-darken-2">School Registration Form</h1>

        <div class="row">
            <form class="col s12" name="action">
                <div class="row">
                    <div class="input-field col s8">
                        <input  id="school_name" type="text" class="validate" required>
                        <label for="school_name">School Name</label>
                    </div>
                    <div class="input-field col s4">
                        <input id="district" type="text" class="validate" required>
                        <label for="district">District</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s6">
                        <input id="address" type="text" class="validate" required>
                        <label for="address">Address</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s6">
                        <input id="username" type="text" class="validate" required>
                        <label for="username">Username</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <input id="password" type="password" class="validate" required>
                        <label for="password">Password</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                    <input id="email" type="email" class="validate" required>
                    <label for="email">Email</label>
                    </div>
                </div>
                <button class="btn waves-effect waves-light" type="submit" name="action">Submit
                    <i class="material-icons right">send</i>
                </button>
            </form>
        </div>

        <br><br><br>
    </div>



{% endblock %}